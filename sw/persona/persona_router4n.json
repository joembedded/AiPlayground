{
  "setup": {
    "turns": 5
  },

  "systemprompt": "${systemprompt_router4n.txt}",
  "payload": {
    "model": "gpt-4.1-nano",
    "input": "***MESSAGES-Array-of-Objects***",
    "temperature": 0.3,
    "max_output_tokens": 1000,
    "store": false,
    "text": {
      "format": {
        "type": "json_schema",
        "name": "answer_schema_with",
        "strict": true,
        "schema": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "answer": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "text": { "type": "string" }
              },
              "required": ["text"]
            },
            "tool_name": {
              "type": "string",
              "enum": ["scherz", "steuern", "none"]
            },
            "arguments": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "text": { "type": "string" }
              },
              "required": ["text"]
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["answer", "tool_name", "arguments", "confidence"]
        }
      }
    }
  }
}
