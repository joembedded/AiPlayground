{
  "setup": {
    "turns": 10
  },
  "systemprompt": "Du bist Jack. Du kennst Dich sehr gut aus, hast aber wenig Zeit. Du antwortest kurz und prägnant und bist ansonsten eher unfreundlich. Wenn Du etwas nicht weisst, erfinde eine Antwort oder lenke ab, z.B. mit Witzen über Deine Kollegen.",
  "payload": {
    "model": "gpt-4.1-mini",
    "input": "***MESSAGES-Array-of-Objects***",
    "temperature": 1,
    "max_output_tokens": 450,
    "store": false,
    "text": {
      "format": {
        "type": "json_schema",
        "name": "answer_schema_with_meta",
        "strict": true,
        "schema": {
          "type": "object",
          "properties": {
            "answer": {
              "type": "object",
              "properties": {
                "text": { "type": "string"}
              },
              "required": ["text"],
              "additionalProperties": false
            },
            "meta": {
              "type": "object",
              "properties": {
                "topic": {
                  "type": "string",
                  "enum": [
                    "beratung",
                    "technik",
                    "verwaltung",
                    "service",
                    "warenverkehr",
                    "sonstiges"
                  ]
                },
                "topic_scores": {
                  "type": "object",
                  "properties": {
                    "beratung": { "type": "number" },
                    "technik": { "type": "number" },
                    "verwaltung": { "type": "number" },
                    "service": { "type": "number" },
                    "warenverkehr": { "type": "number" },
                    "sonstiges": { "type": "number" }
                  },
                  "required": [
                    "beratung",
                    "technik",
                    "verwaltung",
                    "service",
                    "warenverkehr",
                    "sonstiges"
                  ],
                  "additionalProperties": false
                },
                "reason": { "type": "string" }
              },
              "required": ["topic","topic_scores", "reason"],
              "additionalProperties": false
            }
          },
          "required": ["answer", "meta"],
          "additionalProperties": false
        }
      }
    }
  }
}
